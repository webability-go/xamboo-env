{
  "listeners": [
    {
      "name": "http",
      "ip": "",
      "port": "82",
      "protocol": "http",
      "readtimeout": 120,
      "writetimeout": 120,
      "headersize": 65536,
      "log": {
        "comments": "this field is ignored by the xamboo. The rotate field is 1d, 1w, 1m, for days, weeks, months, compress = true to compress older files. logs can be file:[file] or stdout: or stderr: or discard:. the sys log is used for deep code log (like debug, pages code log, etc)",
        "sys": "file:./example/logs/listener-http-sys.log",
        "rotate": "1d",
        "compress": true
      }
    },
    {
      "name": "https",
      "ip": "",
      "port": "83",
      "protocol": "https",
      "readtimeout": 120,
      "writetimeout": 120,
      "headersize": 65536,
      "log": {
        "comments": "this field is ignored by the xamboo. The rotate field is 1d, 1w, 1m, for days, weeks, months, compress = true to compress older files. logs can be file:[file] or stdout: or stderr: or discard:. the sys log is used for deep code log (like debug, pages code log, etc)",
        "sys": "file:./example/logs/listener-https-sys.log",
        "rotate": "1d",
        "compress": true
      }
    }
  ],
  "hosts": [
    {
      "name": "developers",
      "listeners": [
        "http",
        "https"
      ],
      "hostnames": [
        "developers.webability.info"
      ],
      "cert": "./example/ssl/cert.pem",
      "key": "./example/ssl/privkey.pem",
      "plugins": [
        { "Name":"app",
          "Library": "./example/app/app.so"
        }
      ],

      "origin": {
        "enabled": true,
        "maindomains": ["webability.info"],
        "default": "https://developers.webability.info",
        "methods": ["GET", "POST", "OPTIONS", "HEAD"],
        "headers": ["Accept", "Content-Type", "Content-Length", "Accept-Encoding", "X-CSRF-Token", "Authorization", "Origin", "X-Requested-With", "Method"],
        "credentials": true
      },

      "redirect": {
        "enabled": true,
        "scheme": "https",
        "host": "developers.webability.info:83"
      },

      "auth": {
        "enabled": true,
        "realm": "Xamboo Env test (xamboo/xamboo)",
        "user": "xamboo",
        "pass": "xamboo"
      },

      "compress": {
        "enabled": true,
        "mimes": [
          "text/html",
          "text/css",
          "application/javascript"
        ],
        "files": [
          "*.ico",
          "*.css",
          "*.js",
          "*.html"
        ]
      },

      "fileserver": {
        "enabled": true,
        "takeover": false,
        "static": "./example/repository/public/static"
      },

      "minify": {
        "enabled": true,
        "html": true,
        "css": true,
        "js": true,
        "json": true,
        "svg": true,
        "xml": true
      },

      "cms": {
        "enabled": true,
        "config": [
          "./example/application/config/example.conf"
        ],
        "engines": {
          "simple": true,
          "library": true,
          "template": true,
          "language": true,
          "wajafapp": true,
          "box": true
        },
        "browser": {
          "enabled": true,
          "useragent": {
            "enabled": true,
            "comments": "The context.Version will have one of: computer, phone, tablet, tv, console, wearable, base when the module is enabled"
          }
        }

      },
      "error": {
        "enabled": false
      },
      "myhandler": {
        "enabled": true,
        "param1": "value1"
      },

      "log": {
        "enabled": true,
        "pages": "file:./example/logs/developers.log",
        "pagesformat": "%requestid% %clientip% %method% %protocol% %code% %request% %duration% %bytesout% %bytestocompress% %bytestominify%",
        "pagesformatavailable": "use any of: %bytesout% %bytestocompress% %bytestominify% %clientip% %clientport% %code% %duration% %hostid% %listenerid% %listenerip% %listenerport% %protocol% %method% %request% %starttime% %endtime% %requestid%",
        "errors": "file:./example/logs/developers-error.log",
        "sys": "file:./example/logs/developers-sys.log",
        "stats": "call:app:LogStat"
      }

    },
    {
      "name": "devapi-for-cors-api",
      "listeners": [
        "https"
      ],
      "hostnames": [
        "devapi.webability.info"
      ],
      "config": [
        "./example/application/config/example.conf"
      ],
      "cert": "./example/ssl/cert.pem",
      "key": "./example/ssl/privkey.pem",
      "static": "./example/repository/public/static",
      "gzip": {
        "enabled": true,
        "mimes": [
          "text/html",
          "text/css",
          "application/javascript"
        ],
        "files": [
          "*.ico",
          "*.css",
          "*.js"
        ]
      },
      "auth": {
        "enabled": false
      },
      "log": {
        "comments": "this field is ignored by the xamboo. The rotate field is 1d, 1w, 1m, for days, weeks, months, compress = true to compress older files. logs can be file:[file] or stdout: or stderr: or discard:. the sys log is used for deep code log (like debug, pages code log, etc)",
        "pages": "file:./example/logs/developers.log",
        "errors": "file:./example/logs/developers-error.log",
        "sys": "file:./example/logs/developers-sys.log",
        "stats": "discard",
        "rotate": "1d",
        "compress": true
      },
      "origin": {
        "maindomains": [
          "webability.info",
          "webability.org"
        ],
        "default": "https://developers.webability.info",
        "methods": [
          "GET",
          "POST",
          "OPTIONS"
        ],
        "headers": [
          "Accept",
          "Content-Type",
          "Content-Length",
          "Accept-Encoding",
          "X-CSRF-Token",
          "Authorization",
          "Origin",
          "X-Requested-With",
          "Method"
        ],
        "credentials": true
      }
    }
  ],
  "engines": [
    {
      "name": "box",
      "source": "extern",
      "library": "./example/engines/box/box.so"
    }
  ]
}
